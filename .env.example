# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cricket_dev

# Session & Auth
SESSION_SECRET=please_generate_a_long_random_string_for_production
NODE_ENV=development

# CORS Configuration (must match frontend URL exactly)
CORS_ORIGIN=http://localhost:5173
ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173

# Session Cookie Configuration
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_NAME=legacy.sid

# Server Port
PORT=3000

# Dev Login (for testing without Firebase - disable in production)
ENABLE_DEV_LOGIN=true

# Stripe Payment Processing (optional for local dev)
# Get these from https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (Optional - SendGrid)
# Get API key from https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY=SG...
# DEFAULT_FROM_EMAIL=your-email@example.com
# SENDGRID_FROM_EMAIL=your-verified-sender@example.com
# BYPASS_EMAIL_SENDING=true

# Keycloak (Optional - for email verification)
# KEYCLOAK_URL=https://your-keycloak-domain.com
# KEYCLOAK_REALM=your-realm
# KEYCLOAK_CLIENT_ID=your-client-id
# KEYCLOAK_CLIENT_SECRET=your-client-secret
# KEYCLOAK_EMAIL_VERIFY_ENABLED=false

# E2E Testing
# E2E_TESTING=false

# Production Environment Variables (Render)
# -------------------------------------------
# For production deployment on Render:
#
# Required:
# - DATABASE_URL=<provided by Render PostgreSQL>
# - SESSION_SECRET=<generate with: openssl rand -base64 32>
# - NODE_ENV=production
# - CORS_ORIGIN=https://your-frontend-domain.com
# - SESSION_COOKIE_DOMAIN=.yourdomain.com (with leading dot for subdomains)
# - STRIPE_SECRET_KEY=sk_live_...
# - STRIPE_WEBHOOK_SECRET=whsec_...
#
# Optional:
# - SENDGRID_API_KEY=<for email notifications>
# - DEFAULT_FROM_EMAIL=<verified sender email>
#
# Important:
# - Set ENABLE_DEV_LOGIN=false in production
# - Ensure trust proxy is set to 1 in server (already configured)
# - Session cookies use secure=true and sameSite=none in production
