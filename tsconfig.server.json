{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "db/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
